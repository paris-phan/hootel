# Database Configuration
# Option 1: Using Supabase (Recommended)
# Get these values from your Supabase project settings > Database
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Option 2: Using individual parameters (for Supabase or local PostgreSQL)
DB_NAME="postgres"              # For Supabase, use "postgres"
DB_USER="postgres"              # For Supabase, use "postgres"
DB_PASSWORD="your_password"     # Your Supabase project password
DB_HOST="db.xxxxx.supabase.co" # Your Supabase host or "localhost" for local
DB_PORT="5432"                  # Standard PostgreSQL port

# Django Settings
SECRET_KEY=""                   #django secret key

DEBUG="True"

